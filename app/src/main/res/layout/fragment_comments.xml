<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="700dp"
    android:minHeight="600dp"
    app:cardBackgroundColor="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/back"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:cardCornerRadius="70dp"
                android:layout_marginHorizontal="150dp"
                app:cardBackgroundColor="@color/labels" />

            <TextView
                android:id="@+id/UsernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/moderustic_medium"
                android:textSize="20dp"
                android:text="Comments"
                android:textColor="@color/labels"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:layout_marginRight="40dp"
                android:paddingStart="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:cardCornerRadius="70dp"
                app:cardBackgroundColor="@color/labels" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewComments"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:paddingBottom="16dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/labels"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <EditText
                android:id="@+id/EditTextNewComment"
                android:fontFamily="@font/moderustic_bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="your comment"
                android:background="@android:color/transparent"
                android:textColor="@color/back"
                android:textColorHint="@color/back"
                android:padding="8dp"
                android:paddingStart="20dp"
                android:inputType="text"/>

            <ImageButton
                android:id="@+id/NextWindow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:background="@android:color/transparent"
                android:src="@drawable/arrow_right_reworked"
                android:scaleType="fitCenter"
                android:rotation="-90"
                android:elevation="2dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>

